{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "bin",
        "jsx": "react",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "bin",
        "node_modules",
        "scripts"
    ]
}